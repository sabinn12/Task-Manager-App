generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  tasks    Task[]
  createdAt DateTime  @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  priority    String
  deadline    DateTime
  status      String   @default("To Do")
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  boardId     Int?
  board       Board?   @relation(fields: [boardId], references: [id])
}

model Board {
  id    Int    @id @default(autoincrement())
  name  String
  tasks Task[]
}

