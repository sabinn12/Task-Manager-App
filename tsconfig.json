{
  "compilerOptions": {
    "target": "ES2020",             // Modern JavaScript features
    "module": "CommonJS",           // Node.js uses CommonJS
    "strict": true,                 // Enable strict type-checking
    "esModuleInterop": true,        // Enable compatibility with CommonJS modules
    "skipLibCheck": true,           // Skip type-checking for declaration files
    "outDir": "./dist",             // Compiled files output directory
    "rootDir": "./src",             // Root directory for source files
    "typeRoots": ["./node_modules/@types", "./src/@types"] // Custom and default type definitions
  },
  "include": ["src/**/*", "socket.js"],          // Include all files in src folder
  "exclude": ["node_modules"]       // Exclude node_modules folder
}
